# Server environment example
NODE_ENV=production
PORT=5000
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/chatapp?retryWrites=true&w=majority
JWT_SECRET=your_jwt_secret
# CLIENT_URL: single allowed origin (e.g. https://chat.example.com)
CLIENT_URL=https://chat.example.com
# Or specify multiple comma-separated origins with CLIENT_URLS
# CLIENT_URLS=https://chat.example.com,https://staging.chat.example.com

# Cloudinary (optional - required for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
